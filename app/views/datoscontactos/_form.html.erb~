<%= simple_form_for(@datoscontacto, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>

  <%= f.input :nombre, :label => "Nombre",  :required => true %>
  <%= f.input :apellido, :label => "Apellido",  :required => true %>
  <%= f.input :direccion, :label => "Direccion",  :required => true %>
  <%= f.input :email, :label => "Email",  :required => true %>
  <%= f.input :movil, :label => "Movil",  :required => true %>
  <%= f.input :telefono, :label => "Telefono",  :required => true %>
  
  <div class="form-actions">
    <%= f.submit "guardar", :class => 'btn btn-primary' %>
    <%= link_to 'Atras', datoscontactos_path, :class => 'btn btn-small' %>
  </div>
<% end %>
