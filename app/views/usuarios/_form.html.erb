<%= simple_form_for(@usuario, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>
  <%= f.error_notification %>
  <%= f.input :primapellido %>
  <%= f.input :secapellido %>
  <%= f.input :clave %>
  <%= f.input :email %>
  <%= f.input :fecha_nac %>
  <%= f.input :primnombre %>
  <%= f.input :secnombre %>
  <%= f.input :num_cedula %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                usuarios_path, :class => 'btn' %>
  </div>
<% end %>