<%- model_class = Solicitud -%>
<h1>Solicitudes</h1>
<div class="well" id="tablas">
  <table class="table table-striped table-bordered table-condensed pretty">
    <thead>
      <tr>
          <th>ID</th>
          <th>Producto</th>
          <th>Cantidad</th>
          <th>Dias Faltantes</th>
          <th>Fecha de Aprobacion</th>
          <th>Fecha de Entrega al Cliente</th>
          <th>Fecha de la Solicitud</th>
          <th>Resolucion</th>
          <th>Saldo</th>
          <th>Unidades Entregadas</th>
      </tr>
    </thead>
    <tbody>
       <%= render @solicitudes %>
    </tbody>
  </table>
</div>
<%= link_to 'Nueva Solicitud', new_solicitud_path, :remote => true, :class => 'btn btn-info' %>
<hr>